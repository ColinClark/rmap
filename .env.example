# RMAP Environment Configuration
# Copy this file to .env and fill in your actual values

# API Keys
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# MongoDB Atlas
MONGODB_CLIENT_ID=mdb_sa_id_your_client_id
MONGODB_CLIENT_SECRET=mdb_sa_sk_your_client_secret
MONGODB_PROJECT_ID=your_project_id
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=RMAP

# Server Configuration
NODE_ENV=development
PORT=4000

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Email Configuration (Development)
# Note: Ethereal email credentials change on server restart
ETHEREAL_EMAIL=test@ethereal.email
ETHEREAL_PASSWORD=your-ethereal-password
ETHEREAL_WEB_URL=https://ethereal.email/messages

# Test Configuration (Optional)
# Used by test scripts - set these to run test scripts with your data
TEST_EMAIL=test@example.com
TEST_PASSWORD=password123
TEST_NAME=Test User